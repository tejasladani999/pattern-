#include <stdio.h>

int main() 
{
    int s,h;
    
    
    printf("Enter star:");
    scanf("%d",&s);
    printf("Enter height:");
    scanf("%d",&h);
   
    int n =(h*(s-1));
    for (int m=0; m<h; m++)
    {
    
        for (int i=0; i<h; i++)
        {
            int k=0;
            for(int j=0; j<s; j++)
            {
                while(k<=n)
                {
                    printf(" ");
                    k++;
                }
                printf("*");
            }
            printf("\n");
        }
        n=n-s;
    }
    return 0;
}
